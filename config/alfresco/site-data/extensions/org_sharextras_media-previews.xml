<extension>
    <modules>
    
        <!--
            Customization modules for adding i18n labels and importing client-side dependencies for
            the two extra web previewer plugins
        -->
        <module>
            <id>FLVPlayer Video Player</id>
            <customizations>
                <!-- Enable FLVPlayer.js plugin in web-previewer, plus additional messages -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>              
                    <sourcePackageRoot>org.sharextras.customization.media-previews.flvplayer</sourcePackageRoot>
                </customization>
                <!-- Enable FLVPlayer.js plugin in Document Viewer dashlet -->
                <customization>
                    <targetPackageRoot>org.sharextras.components.dashlets</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews-dashlets.flvplayer</sourcePackageRoot>
                </customization>
                <!-- Enable FLVPlayer.js plugin in wiki pages - for Wiki Rich Content add-on -->
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews-wiki.flvplayer</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <module>
            <id>MP3Player Audio Player</id>
            <customizations>
                <!-- Enable MP3Player.js plugin in web-previewer, plus additional messages -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews.mp3player</sourcePackageRoot>
                </customization>
                <!-- Enable MP3Player.js plugin in Document Viewer dashlet -->
                <customization>
                    <targetPackageRoot>org.sharextras.components.dashlets</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews-dashlets.mp3player</sourcePackageRoot>
                </customization>
                <!-- Enable MP3Player.js plugin in wiki pages - for Wiki Rich Content add-on -->
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews-wiki.mp3player</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
                
        <module>
            <id>PdfJs Viewer</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews.pdfjs</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
        <module>
            <id>Embed Viewer</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews.embed</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
    </modules>
</extension>