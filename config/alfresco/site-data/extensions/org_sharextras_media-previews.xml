<extension>
    <modules>
    
        <!--
            Customization module for adding i18n labels and importing client-side dependencies for
            the extra web previewer plugins
        -->
        <module>
            <id>Media Previews Add-on</id>
            <customizations>
                <!-- Enable FLVPlayer.js and MP3Player.js plugins in web-previewer, plus additional messages -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>              
                    <sourcePackageRoot>org.sharextras.customization.media-previews</sourcePackageRoot>
                </customization>
                <!-- Enable FLVPlayer.js and MP3Player.js plugins in Document Viewer dashlet -->
                <customization>
                    <targetPackageRoot>org.sharextras.components.dashlets</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews-dashlets</sourcePackageRoot>
                </customization>
                <!-- Enable FLVPlayer.js and MP3Player.js plugins in wiki pages - for Wiki Rich Content add-on -->
                <customization>
                    <targetPackageRoot>org.sharextras.components.wiki</targetPackageRoot>
                    <sourcePackageRoot>org.sharextras.customization.media-previews-wiki</sourcePackageRoot>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
    </modules>
</extension>