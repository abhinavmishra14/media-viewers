<extension>
    <modules>
    
        <!--
            Customization module for adding i18n labels and importing client-side dependencies for
            the extra web previewer plugins
        -->
        <module>
            <id>Media Previews Add-on</id>
            <customizations>
                <customization>
                    <targetPackageRoot>org.alfresco.components.preview</targetPackageRoot>              
                    <sourcePackageRoot>org.sharextras.customization.media-previews</sourcePackageRoot>
                    <dependencies>
                        <!-- Flash video previewer -->
                        <css>/res/extras/components/preview/FLVPlayer.css</css>
                        <js>/res/extras/components/preview/FLVPlayer.js</js>
                        <!-- Audio previewer -->
                        <css>/res/extras/components/preview/MP3Player.css</css>
                        <js>/res/extras/components/preview/MP3Player.js</js>
                    </dependencies>
                </customization>
                <!-- Enable FLVPlayer.js and MP3Player.js plugins in Document Viewer dashlet -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.dashlets</targetPackageRoot>
                    <dependencies>
                        <!-- Flash video previewer -->
                        <css>/res/extras/components/preview/FLVPlayer.css</css>
                        <js>/res/extras/components/preview/FLVPlayer.js</js>
                        <!-- Audio previewer -->
                        <css>/res/extras/components/preview/MP3Player.css</css>
                        <js>/res/extras/components/preview/MP3Player.js</js>
                    </dependencies>
                </customization>
                <!-- Enable FLVPlayer.js and MP3Player.js plugins in wiki pages - for Wiki Rich Content add-on -->
                <customization>
                    <targetPackageRoot>org.alfresco.components.wiki</targetPackageRoot>
                    <dependencies>
                        <!-- Flash video previewer -->
                        <css>/res/extras/components/preview/FLVPlayer.css</css>
                        <js>/res/extras/components/preview/FLVPlayer.js</js>
                        <!-- Audio previewer -->
                        <css>/res/extras/components/preview/MP3Player.css</css>
                        <js>/res/extras/components/preview/MP3Player.js</js>
                    </dependencies>
                </customization>
            </customizations>
            <auto-deploy>true</auto-deploy>
        </module>
        
    </modules>
</extension>